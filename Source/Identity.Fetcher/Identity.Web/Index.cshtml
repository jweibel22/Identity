    <script type="text/javascript">
        $(document).ready(function () {
            $("#myNav").affix({
                offset: {
                    top: 195
                }
            });
            $("#myNav").on('affixed.bs.affix', function () {
                alert("The left navigation menu has been affixed. Now it doesn't scroll with the page.");
            });
        });
    </script>

    <style>
        .glyphicon-thumbs-up {
            cursor: pointer;
        }

        a[ng-click] {
            cursor: pointer;
        }

        #loading {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1000;
            background-color: white;
            opacity: .2;
        }

        .ajax-loader {
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -32px; /* -1 * image width / 2 */
            margin-top: -32px; /* -1 * image height / 2 */
            display: block;
        }
    </style>
</head>
    <body>        
        <div class="">
            <div ng-app="inspire">
