                    <div class="col-md-3">
                        <div ui-view="channels" class="nav nav-stacked affix"></div>
                    </div>
                    <div class="col-md-6">
                        <div ui-view="container"></div>
                    </div>
                    <div id="loading">
                        <img src="Content/ajax-loader.gif" class="ajax-loader" style="position:fixed;top:50%;left:50%" /> 
